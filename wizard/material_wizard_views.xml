<odoo>
    <data>
        <record id="view_material_wizard_form" model="ir.ui.view">
            <field name="name">material.wizard.form</field>
            <field name="model">material.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="remarks"/>
                    </group>
                    <footer>
                        <button name="action_create_material_wizard" string="Create" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>